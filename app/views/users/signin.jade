extends auth

block auth
  form.signup.form-horizontal(action="/users/session", method="post")
    p=message
    .form-group
        input.form-control(type='text', name="email", placeholder='Email')

    .form-group
        input.form-control(type='password', name="password", placeholder='Password')

    .form-group
      button.btn.btn-lg(type='submit') Sign in
      a.btn.btn-lg(href="/signup") Register
